# Uncomment the next line to define a global platform for your project
platform :ios, '10.0'

target 'ContractorApp' do
    # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
    use_frameworks!
    
    # Pods for ContractorApp
    
    pod 'SwiftyCam', :git => "https://github.com/Awalz/SwiftyCam.git", :branch => 'Swift4'
    pod "SlackTextViewController"
    pod 'FSCalendar'
    pod 'UPCarouselFlowLayout', '~> 1.1'
    pod 'HGPlaceholders'
    pod 'Hero', :git => 'https://github.com/lkzhao/Hero.git' #fix iOS 11 in UIView+Hero.swift

    pod 'Firebase/AdMob'
    pod 'Firebase/Auth'
    pod 'Firebase/Crash'
    pod 'Firebase/Database'
    pod 'Firebase/Invites'
    pod 'Firebase/RemoteConfig'
    pod 'Firebase/Storage'
    
    target 'ContractorAppTests' do
        inherit! :search_paths
        # Pods for testing
    end
    
    target 'ContractorAppUITests' do
        inherit! :search_paths
        # Pods for testing
    end
    
end
